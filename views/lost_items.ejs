<%- include("partials/header") %>
    <link rel="stylesheet" media="screen and (max-width: 600px)" href="/CSS/gallery.css">
    <div class="container" style="background-color: #0c232f;">
        <div id="head">
            <center>
                <h1>Lost Item</h1>
            </center>
            <a href="/" id="homepage">
                <div class="image-div">
                    <img src="/Images/home.png" alt="not-found">
                </div>
            </a>
        </div>
        <hr>
        <% var index=0 %>
            <div class="row irea" style="padding-left: 30px; padding: right 30px;">
                <% items.forEach(function (item) {index=0%>
                    <% item.lost.forEach(function(image) { %>
                        <% if (image){ %>
                            <div class="col-lg-4 col-md-6">
                                <div class="card" style="width: 18rem; margin-top: 20px;">
                                    <img src="data:image/<%=image.contentType%>;base64,
                    <%=image.data.toString('base64')%>" class="card-image-top">

                                    <div class="card-body">
                                        <div class="card-title">
                                            <p><strong>Email to:</strong>
                                                <%= item.username %>
                                            </p>
                                            <hr>
                                            <p><strong>Contact to:</strong>
                                                <%= item.contact %>
                                            </p>
                                            <hr>
                                        </div>
                                        <p class="card-text"><strong>Description:</strong>
                                            <%=image.descrip%>
                                        </p>
                                        <hr>
                                        <form action="/delete/lost" method="post" style="text-align: center;">
                                            <input type="hidden" value="<%= item._id+" "+index %>" name="checkbox">
                                            <input type="submit" class="btn btn-primary"
                                                value="Claim!! (contact before claiming))" style="width: 100%;">

                                        </form>
                                    </div>
                                </div>
                            </div>
                            <% }index+=1}) %>
                                <%})%>

            </div>
    </div>
    <%- include("partials/footer") %>